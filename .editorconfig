# This file is for unifying the coding style for different editors and IDEs
# http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4

[*.{cpp,c,h}]
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
